{
  "name": "@preconstruct/monorepo",
  "version": "0.0.65",
  "description": "A smart build tool for libraries",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build": "yarn preconstruct build",
    "test": "jest",
    "preconstruct": "node ./build/node_modules/@preconstruct/cli/bin.js",
    "postinstall": "manypkg check && cd build && yarn && cd .. && yarn preconstruct dev",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "start:site": "cd site && yarn start",
    "build:site": "cd site && yarn build",
    "lint": "eslint . --ext tsx,ts,js"
  },
  "repository": "https://github.com/preconstruct/preconstruct",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "site"
  ],
  "private": true,
  "dependencies": {
    "@babel/core": "^7.7.7",
    "@babel/parser": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-typescript": "^7.9.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@manypkg/cli": "^0.17.0",
    "@types/babel__code-frame": "^7.0.1",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^29.2.2",
    "@types/meow": "^5.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.11.9",
    "@types/normalize-path": "^3.0.0",
    "@types/npm-packlist": "^1.1.1",
    "@types/parse-glob": "^3.0.29",
    "@types/parse-json": "^4.0.0",
    "@types/rollup-plugin-json": "^3.0.2",
    "@types/source-map-support": "^0.5.0",
    "@types/terser": "^3.12.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-jest": "^29.3.1",
    "babel-plugin-macros": "^2.8.0",
    "codecov": "^3.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "fixturez": "^1.1.0",
    "jest": "^29.5.0",
    "lazy-require.macro": "^0.1.0",
    "normalize-path": "^3.0.0",
    "outdent": "^0.7.1",
    "prettier": "^2.1.2",
    "typescript": "^5.0.4"
  },
  "manypkg": {
    "defaultBranch": "main"
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "!packages/next",
      "!packages/hook"
    ],
    "exports": {
      "importConditionDefaultExport": "default"
    },
    "___experimentalFlags_WILL_CHANGE_IN_PATCH": {
      "importsConditions": true
    }
  }
}
